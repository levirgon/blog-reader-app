<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="240dp"
                                             android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/navigation_cover_image"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/blog_cover"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="160dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:contentDescription=""/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_profile_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:contentDescription="@string/cover_image"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="4dp"
        tools:layout_conversion_absoluteX="150dp"
        tools:layout_conversion_absoluteY="112dp"
        tools:layout_conversion_absoluteWidth="84dp"
        tools:layout_conversion_absoluteHeight="84dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/navigation_cover_image"
        android:layout_marginTop="116dp"/>

    <TextView
        android:id="@+id/navigation_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/navigation_header"
        android:textAlignment="center"
        android:textColor="@color/fbutton_color_concrete"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/nav_header_profile_image"
        app:layout_constraintRight_toRightOf="@+id/nav_header_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_profile_image"
        app:layout_constraintVertical_bias="0.333"
        tools:layout_conversion_absoluteHeight="29dp"
        tools:layout_conversion_absoluteWidth="97dp"
        tools:layout_conversion_absoluteX="143dp"
        tools:layout_conversion_absoluteY="210dp"/>

    <ImageButton
        android:id="@+id/dp_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/transparent"
        android:contentDescription=""
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/navigation_header_user_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/nav_header_profile_image"
        app:layout_constraintRight_toRightOf="@+id/nav_header_profile_image"
        app:srcCompat="@drawable/ic_image_upload"/>

</android.support.constraint.ConstraintLayout>